<p>
    <input type="text" class="form-control" id="myInput" onkeyup="search()" placeholder="search for roles with username">
</p>
<style>
    #myUL {
        /* Remove default list styling */
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        #myUL li a {
            border: 1px solid #ddd; /* Add a border to all links */
            margin-top: -1px; /* Prevent double borders */
            background-color: #f6f6f6; /* Grey background color */
            padding: 4px; /* Add some padding */
            text-decoration: none; /* Remove default text underline */
            font-size: 18px; /* Increase the font-size */
            color: black; /* Add a black text color */
            display: none; /* Make it into a block element to fill the whole list */
        }

            #myUL li a.header {
                display: block;
                background-color: #e2e2e2; /* Add a darker background color for headers */
                cursor: default; /* Change cursor style */
            }

            #myUL li a.found {
                display: block !important;
            }

            #myUL li a:hover:not(.header) {
                background-color: #eee; /* Add a hover effect to all links, except for headers */
            }
</style>
<script>
    function search() {
        // Declare variables
        var input, filter, ul, li, a, i;

        filter = document.getElementById("myInput").value.toUpperCase();
        ul = document.getElementById("myUL");
        li = ul.getElementsByTagName('li');
        if (filter == "") {
            var users = document.getElementsByClassName("ul-item");
            for (k = 0; k < users.length; k++) {
                users[k].style.display = "none";
            }
        } else {
            console.log("value filter: " + filter);
            // Loop through all list items, and hide those who don't match the search query
            for (i = 0; i < li.length; i++) {
                a = li[i].getElementsByTagName("a")[0];
                if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
                    li[i].style.display = "block";
                    for (j = 0; j < li[i].getElementsByTagName("a").length; j++) {
                        var tag = li[i].getElementsByTagName("a")[j];
                        tag.style.display = "block";
                    }
                } else {
                    li[i].style.display = "none";
                }
            }
        }
    }
</script>
