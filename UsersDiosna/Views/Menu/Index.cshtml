@model IEnumerable<UsersDiosna.Controllers.Notification>

@{
    string alarmName = string.Empty;
    string graphName = string.Empty;
    ViewBag.Title = "Menu center";
    ViewBag.names = Session["names"];
    ViewBag.plc = Session["plc"];
    foreach (string name in ViewBag.names) {
        if(name.ToLower().Contains("alarm"))
        {
            alarmName = name;
        }
        if (name.ToLower().Contains("graph"))
        {
            graphName = name;
        }
    }

}

<h4>Menu center</h4>
<div class="row">
    <p class="col-md-4 col-md-offset-2">
        <a class="btn btn-default" href="/AlarmNotification/All?name=@alarmName&plc=@ViewBag.plc[0]">Notification alarms</a>
    </p><p class="col-md-4 col-md-offset-2">
        <a class="btn btn-default" href="/GraphNotification/Index?name=@graphName&plc=@ViewBag.plc[0]">Notification PLC tags</a>
    </p>
</div>
