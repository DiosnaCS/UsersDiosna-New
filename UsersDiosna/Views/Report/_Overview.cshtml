            <th style="width: 145px">End</th>
            <th>Product</th>
            <th style="width: 55px;">Recipe</th>
            <th style="width: 130px">Status</th>
        </tr>
            foreach (Batch batch in Model.Batches)
            {
        <tr onclick="getBatch(@batch.Id)">
