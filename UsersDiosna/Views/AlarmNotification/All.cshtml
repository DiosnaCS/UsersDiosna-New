
@{
    ViewBag.Title = "Notification from alarms";
}

<h2>Notification from alarms</h2>
<div class="bottom">
    Check checkbox of deisired alarms

        @using (Html.BeginForm("NewNotification", "AlarmNotification", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <table class="table table-striped table-bordered table-condensed table-hover">
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Alarm Label</th>
                </tr>
                @foreach (UsersDiosna.AlarmNotificationHandler.alarm_texts Alarm in ViewBag.Alarms)
                {
                <tr>
                    <td><input type="checkbox" name="@Alarm.id">@*@Html.CheckBox(Alarm.id.ToString())*@</td>
                    <td>@Alarm.id</td>
                    <td>@Alarm.title</td>
                </tr>
                }

            </table>
        <div class="form-group">
            <div class="form-group">
                <div class="col-md-2">
                    <input type="submit" class="btn btn-primary btn-sm" " value="Save Notification" />
                </div>
                <div class="col-md-10">
                    <a href="/Alarm/" class="btn btn-success btn-sm">Back</a>
                </div>
             </div>
        </div>
       }
</div>
